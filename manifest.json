{
  "manifest_version": 2,

  "name": "Link Saver",
  "description": "Save URLs that the user may want to look at another time",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "View Saved Links!"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://ajax.googleapis.com/",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}